<div class = "container">
  <div class="col-md-6"><span class="float-left"></span>
	  <div class="wrapper">
        <%= form_for :user, url: '/users', :html => {class: 'form-signin'} do |f| %>
          <h3 class="form-signin-heading">Sign Up</h3>
            Full Name: <%= f.text_field :full_name, type:"text", class:"form-control" %>
            Username: <%= f.text_field :username, type:"text", class:"form-control" %>
            Email: <%= f.text_field :email_address, type:"text", class:"form-control" %>
            Password: <%= f.password_field :password, type:"password", class:"form-control" %>
            Password Confirmation: <%= f.password_field :password_confirmation, type:"password", class:"form-control" %>
            <%= f.submit "Submit", class: "btn btn-lg btn-primary btn-block", name: "Submit", type:"Submit"%>
            <div id="links"><%= link_to "Sign in with Facebook", "/auth/facebook" %>
        <% end %>
	   </div>
  </div>
</div>
